        "low_threshold": 1,
        "medium_threshold": 3,
        "high_threshold": 5,
        "critical_threshold": 10,
        "time_window_minutes": 30,
        "comparison_operator": ">",
        "aggregation_method": "count",
        "applies_to": [
          "system_commands"
        ],
        "filter_conditions": {
