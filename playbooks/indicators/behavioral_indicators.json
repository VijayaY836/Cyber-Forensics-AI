        "metric_name": "cpu_disk_spike",
        "description": "Sustained high CPU and disk usage",
        "low_threshold": 70,
        "medium_threshold": 80,
        "high_threshold": 90,
        "critical_threshold": 95,
        "time_window_minutes": 15,
        "comparison_operator": ">",
        "aggregation_method": "avg",
        "applies_to": [
          "system_resources"
        ],
        "filter_conditions": {
          "metric": "cpu_and_disk"
